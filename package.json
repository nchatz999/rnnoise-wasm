{
    "name": "rnnoise-wasm",
    "description": "RNNoise noise suppression as a WASM module for AudioWorklet.",
    "version": "1.0.0",
    "author": "nchatz999@gmail.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nchatz999/rnnoise-wasm.git"
    },
    "scripts": {
        "build": "npm run build:emscripten && npm run build:typescript && npm run build:worklet",
        "lint": "publint",
        "build:emscripten": "docker compose run --rm build",
        "build:typescript": "tsc",
        "build:worklet": "node scripts/build-worklet.js"
    },
    "files": [
        "dist/"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./worklet": {
            "types": "./dist/NoiseSuppressorWorklet.d.ts",
            "default": "./dist/NoiseSuppressorWorklet.js"
        },
        "./worklet-bundle": "./dist/worklet-bundle.js"
    },
    "devDependencies": {
        "@types/audioworklet": "^0.0.56",
        "@types/emscripten": "^1.41.5",
        "esbuild": "^0.27.2",
        "livekit-client": "^2.16.1",
        "publint": "^0.2.8",
        "typescript": "^5.5.2"
    },
    "license": "Apache-2.0",
    "type": "module",
    "publishConfig": {
        "access": "public"
    }
}
